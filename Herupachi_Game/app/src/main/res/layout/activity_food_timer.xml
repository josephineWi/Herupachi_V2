<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Food_Timer">

    <ImageView
        android:id="@+id/food_BG"
        android:layout_width="809dp"
        android:layout_height="1285dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385"
        app:srcCompat="@drawable/background_food" />

    <TextView
        android:id="@+id/motivationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginEnd="155dp"
        android:fontFamily="sans-serif"
        android:text="I believe in you!"
        android:textColor="#F49576"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/countdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="520dp"
        android:layout_height="174dp"
        android:layout_marginStart="179dp"
        android:layout_marginEnd="175dp"
        android:text="Choose your time ٩(◕‿◕｡)۶"
        android:textAlignment="center"
        android:textColor="#BA8452"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.532" />

    <ImageView
        android:id="@+id/gift1"
        android:layout_width="196dp"
        android:layout_height="197dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/peach_new"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/gift2"
        android:layout_width="196dp"
        android:layout_height="197dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button120Min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button60Min"
        app:srcCompat="@drawable/croissant_new"
        tools:visibility="gone" />

    <ImageView
        android:id="@+id/gift3"
        android:layout_width="244dp"
        android:layout_height="244dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button120Min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button60Min"
        app:srcCompat="@drawable/cake_new"
        tools:visibility="gone" />

    <Button
        android:id="@+id/button30Min"
        android:layout_width="215dp"
        android:layout_height="77dp"
        android:backgroundTint="#FE9E80"
        android:text="30 minutes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <Button
        android:id="@+id/button120Min"
        android:layout_width="227dp"
        android:layout_height="67dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="187dp"
        android:backgroundTint="#E9A4B6"
        android:text="120 minutes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motivationText"
        app:layout_constraintVertical_bias="0.745" />

    <ImageView
        android:id="@+id/returnButton"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.977"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/return_button" />

    <ImageView
        android:id="@+id/peach"
        android:layout_width="148dp"
        android:layout_height="152dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="256dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/peach_new" />

    <ImageView
        android:id="@+id/cake"
        android:layout_width="197dp"
        android:layout_height="201dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/description"
        app:layout_constraintVertical_bias="0.692"
        app:srcCompat="@drawable/cake_new" />

    <Button
        android:id="@+id/button60Min"
        android:layout_width="215dp"
        android:layout_height="77dp"
        android:backgroundTint="#E6AF7C"
        android:text="60 minutes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toEndOf="@+id/button30Min"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <ImageView
        android:id="@+id/croissant"
        android:layout_width="159dp"
        android:layout_height="160dp"
        android:layout_marginTop="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toEndOf="@+id/peach"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/croissant_new" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C8FEF8FD"
        android:fontFamily="sans-serif"
        android:text="Feed your Herupachi by being productive for a certain amount of time."
        android:textAlignment="center"
        android:textColor="#A6703F"
        android:textSize="24.5sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/motivationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002" />

</androidx.constraintlayout.widget.ConstraintLayout>